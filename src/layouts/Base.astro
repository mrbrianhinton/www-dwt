---
import type { SiteMeta } from "@/types";
import BaseHead from "@/components/BaseHead";
import Header from "@/components/Header";
import Footer from "@/components/Footer";
import SkipLink from "@/components/SkipLink";
import siteMeta from "src/site-meta.config";
export type Props = {
	meta: SiteMeta;
};
const {
	meta: { title, description, image },
} = Astro.props as Props;
---

<html lang={siteMeta.lang}>
	<head>
		<BaseHead title={title} description={description} image={image} />
		<script define:vars={{ siteMeta }}>
			const root = document.documentElement;
			const colorThemeMetaTag = document.querySelector(
				"meta[name='theme-color']"
			);
			const theme =
				typeof localStorage !== "undefined"
					? localStorage.getItem("theme")
					: null;
			if (
				theme === "dark" ||
				(!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				root.classList.add("dark");
				colorThemeMetaTag.setAttribute("content", siteMeta.themeColorDark);
			} else {
				root.classList.remove("dark");
				colorThemeMetaTag.setAttribute("content", siteMeta.themeColorLight);
			}
		</script>
	</head>
	<body>
		<SkipLink />
		<Header />
		<main id="main">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
	/* Typography */
	--font-family-sans: sans-serif;
	--font-family-serif: serif;
	--font-family-decorative: serif;
	--font-family-code: monospace;

	/* Font Weights */
	--weight-regular: 300;
	--weight-medium: 400;
	--weight-bold: 700;
	--weight-black: 900;
	
	/* The soul becomes dyed with the color of its thoughts.‚Äù ~ Marcus Aurelius */
	--color-charcoal-011: #242316;
	--color-charcoal-021: #424128;
	--color-charcoal-046: #7A7A73;
	--color-white: #fff;
	--color-darkteal: #011A17;
	--color-mediumteal: #64B3Af;
	--color-lightteal: #EBFFFE;
	--color-teal: #4BFAF1;
	--color-pink: #FA4B85;
	--color-yellow: #E5FA4B;
	--color-green: #14DE6F;
	--color-eggwhite: #FFFFF0;
	--color-highlight: #EBFFFE;
	
	/* Spacing */
	--space-eighth: 0.2rem;
	--space-quarter: 0.4rem;
	--space-half: 0.8rem;
	--space-default: 1.6rem;
	--space-double: 3.2rem;
	--space-quad: 6.4rem;
	--space-oct: 12.8rem;
	}

	/* Reset */
	html {
	box-sizing: border-box;
	}

	*, *::before, *::after {
	box-sizing: inherit;
	}

	html, body {
	height: 100vh;
	margin: 0;
	}

	html,body {
	background-color: var(--color-darkteal);
	color: var(--color-lightteal);
	font-size: 62.5%;
	}

	h1, h2, p, i, a, .first-letter, .authorName a {
	color: var(--color-lightteal);
	text-rendering: optimizeLegibility;
	}

	h1 {
	font-family: var(--font-family-sans);
	font-size: 5.6rem;
	font-weight: var(--weight-bold);
	text-align: center;
	margin: 4.8rem 0 1.2rem 0;
	}

	.t-decorative {
	font-family: var(--font-family-decorative);
	font-weight: var(--weight-regular);
	}

	.t-blog {
	font-size: 5.6rem;
	line-height: 6.4rem;
	text-align: left;
	margin-bottom: 4.0rem;
	}

	h2 {
	font-family: var(--font-family-sans);
	font-size: 2.4rem;
	font-weight: var(--weight-bold);
	padding: 0;
	margin: 5.6rem 0 -1.3rem -0.188rem;
	text-align: left;
	line-height: 3.45rem;
	}

	p, i, a {
	margin-top: 2.1rem;
	font-family: var(--font-family-sans);
	font-size: 2.0rem;
	letter-spacing: -.002rem;
	line-height: 1.58;
	}

	p {
	font-weight: var(--weight-regular);
	}

	a {
	text-decoration: none;
	border-bottom: 1px solid var(--color-mediumteal);
	}

	a:hover {
	color: var(--color-white);
	}

	li {
	list-style: none;
	}

	blockquote {
	border-left: .4rem solid var(--color-mediumteal);
	font-family: var(--font-family-sans);
	font-size: 3.0rem;
	font-weight: var(--weight-bold);
	letter-spacing: -.036rem;
	line-height: 4.44rem;
	overflow-wrap: break-word;
	margin: 5.5rem 0 3.3rem 0;
	color: var(--color-charcol-011);
	padding: 0 0 0 3.2rem;
	}

	code {
	font-size: 1.8rem;
	font-family: var(--font-family-code);
	background: rgba(0,0,0,.05);
	border-radius: .2rem;
	padding: .3rem .5rem;
	}

	.highlighted {
	background: var(--color-highlight);
	color: var(--color-darkteal);
	border-radius: .2rem;
	padding: 0 0.6rem;
	}

	.first-letter {
	overflow-wrap: break-word;
	font-family: var(--font-family-sans);
	font-size: 6.0rem;
	font-weight: var(--weight-black);
	line-height: 6.0rem;
	display: block;
	position: relative;
	float: left;
	margin: 0 .7rem 0 -.5rem;
	}

	.subtitle, .meta {
	font-family: var(--font-family-sans);
	color: var(--color-mediumteal);
	margin: 0 0 2.4rem 0;
	}

	.meta {
	margin: 0 0 2.2rem 0;
	font-size: 1.6rem;
	letter-spacing: .08rem;
	}

	.meta--headline {
	margin-bottom: 5.6rem;
	}

	/* Layout */

	.container {
	height: 100vh;
	display: grid;
	grid-template-columns: 14.0rem 74.0rem auto;
	grid-template-areas: " . content .";
	}

	.content {
	grid-area: content;
	margin: 4.0rem 1.0rem;
	}

	@media screen and (max-width: 740px) {
	.container {
			grid-template-columns: auto;
			grid-template-areas: "content";
	}
	p {
		font-size: 2.0rem;
	}
	}

	@media screen and (max-width: 300px) {
	img {
		display: none;
	}
	p {
		font-size: 1.6rem;
	}
	}
</style>
